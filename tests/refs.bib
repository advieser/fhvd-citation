
@article{vonlewinskiArbeitgeberhaftungNachAGG2018a,
	title = {Arbeitgeberhaftung nach dem {AGG} infolge des {Einsatzes} von {Algorithmen} bei {Personalentscheidungen}},
	abstract = {In der und durch die vierte industrielle Revolution (so genannte Industrie 4.0) werden Algorithmen zu einem festen Bestandteil der Arbeitswelt. Immer mehr Aufgaben, die vor wenigen Jahren noch von Menschen ausgeführt wurden, werden von Programmen übernommen. Dies gilt auch für den Bereich der Personalverwaltung. Doch führt das Spannungsverhältnis zwischen der Funktionsweise von Algorithmen und dem Antidiskriminierungsrecht im Bereich des Personalmanagements zu einem Haftungsrisiko des Arbeitgebers nach § AGG § 15 AGG. Ausgehend von einer (rechtswissenschaftlichen Arbeits-)Definition des Begriffs des „Algorithmus“ und dem erwähnten Spannungsverhältnis von deren Arbeitsweise zum Antidiskriminierungsrecht (I.) wird der Frage nachgegangen, ob und unter welchen Voraussetzungen eine Haftung des Arbeitgebers nach § AGG § 15 AGG § 15 Absatz I AGG (II.) und nach § AGG § 15 AGG § 15 Absatz II AGG (III.) im Fall des Einsatzes von Algorithmen gegeben sein kann.},
	number = {10},
	journal = {Neue Zeitschrift für Arbeitsrecht},
	author = {Von Lewinski, Kai and De Barros Fritz, Raphael},
	year = {2018},
	pages = {620--625},
}

